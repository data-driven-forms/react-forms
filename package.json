{
  "name": "react-forms",
  "version": "1.9.6",
  "main": "index.js",
  "repository": "git@github.com:data-driven-forms/react-forms.git",
  "author": "Martin Marosi <marvusm.mmi@gmail.com>",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "vendor": "lerna run vendor",
    "test": "jest --coverage",
    "test-ci": "jest",
    "test:update": "jest -u",
    "release": "semantic-release",
    "codecov": "codecov",
    "start-demo": "lerna run start --scope=@data-driven-forms/react-render-demo"
  },
  "workspaces": [
    "packages/**"
  ],
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/config/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "<rootDir>/packages/**/src/**/*.js",
      "!<rootDir>/packages/react-renderer-demo/**/*.js",
      "!<rootDir>/packages/**/dist"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  },
  "devDependencies": {
    "@khala/npm-release-monorepo": "^2.2.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/npm": "^5.1.4",
    "atob-lite": "^2.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "lerna": "^3.13.1",
    "semantic-release": "^15.13.3"
  },
  "release": {
    "monorepo": "./packages",
    "plugins": [
      "@khala/npm-release-monorepo",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json"
        ],
        "message": "Release of new version: ${nextRelease.version} <no> [skip ci]",
        "successComment": ":tada: This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version} :tada:\n\nThe release is available on \n\n- [GitHub release](<github_release_url>)\n\n- [npm package (@latest dist-tag)](<npm_release_url>)\n\nDemo can be found [here](http://data-driven-forms.surge.sh/)!"
      }
    ]
  }
}
