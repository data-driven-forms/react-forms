{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@data-driven-forms/common",
  "root": "packages/common",
  "sourceRoot": "packages/common/src",
  "projectType": "library",
  "tags": ["type:utility", "scope:shared", "platform:react"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/index.js",
        "{projectRoot}/esm",
        "{projectRoot}/*.d.ts"
      ],
      "options": {
        "command": "yarn build",
        "cwd": "packages/common"
      },
      "cache": true
    },
    "build:cjs": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/*.js"],
      "options": {
        "command": "yarn build:cjs",
        "cwd": "packages/common"
      },
      "cache": true
    },
    "build:esm": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/esm"],
      "options": {
        "command": "yarn build:esm",
        "cwd": "packages/common"
      },
      "cache": true
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn test",
        "cwd": "packages/common"
      },
      "cache": true
    },
    "typecheck": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "packages/common/src/index.js",
        "tsConfig": "packages/common/tsconfig.json",
        "outputPath": "packages/common/dist"
      },
      "outputs": ["{options.outputPath}"],
      "cache": true
    }
  }
}
