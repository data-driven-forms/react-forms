{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@data-driven-forms/common",
  "root": "packages/common",
  "sourceRoot": "packages/common/src",
  "projectType": "library",
  "tags": [
    "type:utility",
    "scope:shared",
    "platform:react"
  ],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/index.js",
        "{projectRoot}/esm",
        "{projectRoot}/*.d.ts"
      ],
      "options": {
        "command": "npm run build",
        "cwd": "packages/common"
      },
      "cache": true
    },
    "build:cjs": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/*.js"
      ],
      "options": {
        "command": "npm run build:cjs",
        "cwd": "packages/common"
      },
      "cache": true
    },
    "build:esm": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/esm"
      ],
      "options": {
        "command": "npm run build:esm",
        "cwd": "packages/common"
      },
      "cache": true
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "jest.config.js",
        "testPathPattern": "packages/common",
        "passWithNoTests": false
      },
      "cache": true
    },
    "typecheck": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "packages/common/src/index.js",
        "tsConfig": "packages/common/tsconfig.json",
        "outputPath": "packages/common/dist"
      },
      "outputs": [
        "{options.outputPath}"
      ],
      "cache": true
    }
  }
}
