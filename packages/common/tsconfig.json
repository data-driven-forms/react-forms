{
  "compilerOptions": {
    "sourceMap": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2020", "dom"],
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "allowJs": false,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["./dist", "./src/tests/**/*", "./node_modules"]
}
