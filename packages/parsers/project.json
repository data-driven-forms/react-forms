{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@data-driven-forms/parsers",
  "root": "packages/parsers",
  "sourceRoot": "packages/parsers/src",
  "projectType": "library",
  "tags": [
    "type:utility",
    "scope:private",
    "platform:react"
  ],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/index.js",
        "{projectRoot}/esm",
        "{projectRoot}/*.d.ts"
      ],
      "options": {
        "command": "npm run build",
        "cwd": "packages/parsers"
      },
      "dependsOn": [
        "^build"
      ],
      "cache": true
    },
    "build:cjs": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/*.js"
      ],
      "options": {
        "command": "npm run build:cjs",
        "cwd": "packages/parsers"
      },
      "cache": true
    },
    "build:esm": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/esm"
      ],
      "options": {
        "command": "npm run build:esm",
        "cwd": "packages/parsers"
      },
      "cache": true
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "jest.config.js",
        "testPathPattern": "packages/parsers",
        "passWithNoTests": false
      },
      "cache": true
    }
  }
}
